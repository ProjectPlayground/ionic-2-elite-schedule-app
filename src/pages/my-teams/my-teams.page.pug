ion-header
  ion-navbar(color='primary')
    button(ion-button, menutoggle)
      ion-icon(name='menu', icon-only)
    ion-title
      | Elite Schedule
  ion-toolbar(color='secondary')
    ion-title My Teams
ion-content
  ion-card(*ngIf='!favorites')
    ion-card-header.my-teams-header
      | No Followed Teams
    ion-card-content
      p You are not currently following any teams.
      p First select a tournament, then you can follow teams from their team page.
      button(outline, full, ion-button, (click)='goToTournaments()')
        ion-icon(name='search', icon-left)
        |             Find a Tournament
  ion-card(*ngIf='favorites')
    ion-list
      ion-list-header.my-teams-header
        | Followed Teams
      button(ion-item, *ngFor='let item of favorites', (click)='favoriteTapped($event, item)')
        ion-icon(name='people')
        |                 {{item.team.name}}
        p {{item.tournamentName}}
    ion-card-content
      p
        | To follow more teams, select a tournament,
        | then you can follow teams from their team page.
      button(outline, full, ion-button, (click)='goToTournaments()')
        ion-icon(name='search', icon-left)
        |             Find a Tournament
  //
    <ion-list>
    <ion-list-header>
    Followed Teams
    </ion-list-header>
    <button ion-item *ngFor="let item of favorites" (click)="favoriteTapped($event, item)">
    <ion-icon name="people"></ion-icon>
    {{item.team.name}}
    <p>{{item.tournamentName}}</p>
    </button>
    </ion-list>
    <p>To follow more teams, select a tournament,
    then you can follow teams from their team page.</p>
    <button outline full ion-button (click)="goToTournaments()">
    <ion-icon name="search" icon-left></ion-icon>
    Find a Tournament
    </button>